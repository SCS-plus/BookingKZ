<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bronkz.bookingkz" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Бронируй KZ</name>
    <description>
        Бронируй отдых, бронируй развлечения, бронируй всё!
    </description>
    <author email="m.polazhynets@hotmail.com" href="http://flamix.info">
        Flamix Team
    </author>
    <content src="index.html" />
    <icon src="res/icon.png" />
    <access origin="*"/>
    <access origin="http://markup.romanshkabko.ru/bankadata/" subdomains="true" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="data:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="browser" spec="~4.1.0" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.2" />
    <engine name="android" spec="~5.2.2" />
    <allow-navigation href="*" />
</widget>
